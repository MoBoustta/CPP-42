# SIMPLE ===================================================================================
NAME = convert
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = srcs/

SRCS =	main.cpp		\
		serializer.cpp

EXPLICIT_SRCS =	main.cpp		\
				explicit_serializer.cpp
# ==========================================================================================

# INCLUDES =================================================================================
INCS_DIR = incs/
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
INCLUDE = -I$(INCS_DIR)
FLAGS = -Wall -Wextra -Werror -std=c++98 $(INCLUDE)
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objs/

OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))

EXPLICIT_OBJ 		= 	$(EXPLICIT_SRCS:.cpp=.o)
EXPLICIT_OBJS 		= 	$(addprefix $(OBJS_DIR), $(EXPLICIT_OBJ))

# ==========================================================================================

# COLORS ===================================================================================
_GREEN=$'\x1b[32m
_WHITE=$'\x1b[37m
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp $(INCS_DIR)
	@mkdir -p $(OBJS_DIR)
	@echo "$(_WHITE)Compiling: $(_GREEN)$<$(_WHITE)"
	@clang++ $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	@clang++ $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	@echo "$(_WHITE)Cleaning: $(_GREEN)$(OBJS_DIR)$(_WHITE)"
	@rm -rf $(OBJS_DIR)
	

fclean: clean
	@echo "$(_WHITE)Cleaning: $(_GREEN)$(NAME)$(_WHITE)"
	@rm -f $(NAME)

re: fclean all
# ==========================================================================================

# SUP ======================================================================================

explicit:  $(EXPLICIT_OBJS)
	@clang++ $(FLAGS) -o $(NAME) $(EXPLICIT_OBJS)
	
run:
	./$(NAME)
# ==========================================================================================